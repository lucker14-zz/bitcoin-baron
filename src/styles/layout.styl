body, html
    position relative
    padding 0
    margin 0
    min-height 100vh
    width 100%
    min-width 320px
    background-color $black


*
    font-family "Roboto"
    box-sizing border-box

    &:focus, &:active
        outline none !important


img, svg
    border 0
    outline none
    max-width 100%


ul,li
    margin 0
    padding 0
    list-style-type none


h1, h2, h3, h4, h5, h6, p, a, button, input, textarea, label
    margin 0
    padding 0
    text-decoration none
    -webkit-font-smoothing antialiased


ul, li
    padding 0
    margin 0
    list-style-type none
    
.relative
    position relative
    
.absolute
    position absolute

div.container
    display flex
    
    &--container-outer
        width 100vw
        // min-height 500px
        flex-flow column wrap
        justify-content center
        align-items center
        
    &.black
        background-color $black
        
    &.yellow
        background-color $yellow
        
    &--container-inner
        width 1280px
        flex-flow column wrap
        justify-content center
        align-items center
        
        &--row
            flex-flow row wrap
    
.text-container
    &--center
        float none
        margin 0 auto    


/* -- HEADER -- */
div.container.container--container-outer#header
    max-height 350px
    min-height 250px
    
    @media screen and (min-height 1050px)
        min-height 30vh

div.header
    flex-flow row wrap
    justify-content center
    align-items center
    
    &--header-part
        flex-flow: column wrap
        justify-content center
        align-items center
        
        width 50%
        max-width: 638px
        
        .text-container
            max-width 65%
            
        h1
            font-weight 400
            font-size 36px
            
        div.absolute
            span
                color white
                font-size 20px
        

.divider
    width 2px
    height 150px
    background-color $black
    

/* -- FORM SECTION -- */
div.container.container--container-outer#form-section
    div.container.container--container-inner
        justify-content center
        align-items flex-start
        
        max-width 640px
        
        @media screen and (min-height 1050px)
            min-height 50vh

        h2
            color yellow
            font-size 28px
            font-weight 400
            
        p
            color $grey
            margin-top 25px
            max-width 80%
            
        form
            margin-top 20px
            width 100%
            
            label
                color $grey
                font-size 11px
                margin-bottom 4px
                
            input[type='email'], input[type='text']
                background-color $black
                border 2px solid $grey
                border-radius 2px
                box-shadow 0 0 5px rgba(255, 255, 255, 0.75)
                width 60%
                padding 10px 5px
                
            input[type='submit']
                background-color $yellow
                color $black
                outline none
                border none
                padding 7px 10px
                font-weight bold
                font-size 14px
                
                &[disabled='disabled']
                    background-color $grey
                
            div
                margin-bottom 20px
            

/* -- WHERE CONTAINER -- */
div.container.container--container-outer#where
    div.container.container--container-inner
        @media screen and (min-height 1050px)
            min-height 16vh

        p
            color grey
            
        div.logo-container
            width 450px
            margin-top 30px
            
            flex-flow row wrap
            justify-content space-between
            align-items center
                
            
/* -- FOOTER -- */
div.container.container--container-outer#footer
    min-height 0
    
    @media screen and (min-height 1050px)
        min-height 4vh

    div.container.container--container-inner
        margin-top 13px
        span, a
            color $grey
            
        div.divider-small
            height 18px
            width 2px
            background-color $grey
            margin 0 20px